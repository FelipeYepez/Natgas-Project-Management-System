<%- include('includes/openHTML.ejs'); %>

<div class="row">
    <div class="col s6 offset-s3">
        
        <div class="card  z-depth-4 card_login">
            <div class="card-image">
                <div class="row">
                    <div class="col s2 offset-s3">
                        <img class="imagen_login" src="https://storage.googleapis.com/natgas/others/logos/natgas-logo-simple.png">
                    </div>
                    <div class="col s6 ">
                        <h1 class="responsive_title_login">Natgas</h1>
                    </div>
                </div>
            </div>
            <div class="card-content">
                <h4 class="responsive_text_login center" >Bienvenido. Por favor ingresa tus datos.</h4>
                <% if (error) { %>
                    <span class="col s6 offset-s3" style="color:red"><%= error %></span>
                <% } %>
                <br>
                <form action="/users/login" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                  
                    <div class="row">
                        <div class="input-field col s8 offset-s2 ">
                            <i class="material-icons prefix ">account_circle</i>
                            <input type="text" name="usuario" placeholder="Nombre de usuario" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            <i class="material-icons prefix">lock</i>
                            <input type="password" name="password" placeholder="ContraseÃ±a" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8 offset-s5">
                            <button type="submit" class= "waves-effect waves-green btn login-btn " name="action">Ingresar</button>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>


<%- include('includes/closeHTML.ejs'); %>