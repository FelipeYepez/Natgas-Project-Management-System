<%- include('includes/openHTML.ejs'); %>


<div class="row">
    <div class="col s12 offset-s4">
        <form class="col s12" action="nuevo-proyecto?_csrf=<%=csrfToken%>" method="POST"  enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <div class="row">
                <div class="input-field col s4">
                    <% if (error) { %>
                        <span style="color:red"><%= error %></span>
                    <% } %>
                    <input  id="nombre_proyecto" type="text"  class="validate" name="nombre"  required>
                    <label for="nombre_proyecto">Nombre del proyecto*</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <textarea  id="descripcion_proyecto" type="text" class="materialize-textarea" name="descripcion"></textarea>
                    <label for="descripcion_proyecto">Descripci√≥n del proyecto</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <select name="departamento" class="browser-default" required>
                        <option value="" disabled selected>Selecciona el departamento del proyecto*</option>        
                        <% for (let departamento of departamentos) { %>
                            <option value="<%= departamento.id_departamento %>"><%= departamento.nombre_departamento %></option>
                        <% } %>
                        
                    </select>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s4">
                    <div class="file-field input-field">
                        <div class="btn">
                          <span>File</span>
                          <input type="file" name="imagen_proyecto" accept="image/*">
                        </div>
                        <div class="file-path-wrapper">
                          <input  class="file-path validate" type="text" placeholder="Sube una imagen para tu proyecto">
                        </div>
                      </div>
                </div>
            </div>
            <div class="row">
                <div class="col s4 offset-s1">
                    <a class="waves-effect waves-light btn" id="cancelbtn" href="<%= last %>">Cancelar</a>
                    <button class="waves-effect waves-light btn" type="submit" value="Crear">Crear</button>
                </div>
            </div>
            
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>

<%- include('includes/closeHTML.ejs'); %>